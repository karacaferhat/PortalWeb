@page
@model IndexModel
@{
    ViewBag.Title = "main-page dashboard";
}

<button id="denemeB" type="button" class="btn btn-primary" data-toggle="modal" data-target="#acceptModal">
    Launch static backdrop modal
</button>

  <div class="modal fade" id="ErrorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Hata Detayları</h5>
        <button id="btnClose" type="button" class="close" data-dismiss="modal" aria-label="Kapat">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="ErrorModalBody" class="modal-body">
      
      </div>
      <div class="modal-footer">
        <button id="btnKapat" type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button id="btnHataBildir"  type="button" class="btn btn-primary">Hata Bildir</button>
      </div>
    </div>
  </div>
</div>

<script>
    $("#denemeB").on("click",_=>{
        $("#ErrorModal").modal("show")
    });
      $("#btnKapat").on("click",_=>{
        $("#ErrorModal").modal("hide")
    });
     $("#btnClose").on("click",_=>{
        $("#ErrorModal").modal("hide")
    });
</script>