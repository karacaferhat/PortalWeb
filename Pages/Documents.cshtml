@page
@model OrdersModel
@{
    ViewBag.Title = "Belgeler";
}

<div class="form-group">
    <div class="m-2">
        <p><b>Status:</b></p>
        <span id="status"></span>
    </div>

    <div class="m-2">
        <label for="process-type">Process Type</label>
        <select id="process-type">
            <option value="byType">Document By Type</option>
            <option value="byDelivery">Delivery Document</option>
            <option value="byDeliveryLine">Delivery Line Document</option>
        </select>
    </div>

    <div class="m-2">
        <button id="select-button" class="btn btn-primary">
             <span id= "upload-text" style="display: block">
                Select and upload files
            </span>

            <div id = "upload-spinner" style="display : none" class="spinner-border text-white" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </button>
        <input type="file" id="file-input" style="display: none;" multiple/>
    </div>

    <div class="m-2">
        <button class="btn btn-primary" id="list-button">List files</button>
        <br/>
        <br/>
        <p><b>Files:</b></p>
        <div id="file-list">

        </div>
    </div>
</div>

<script src="~/lib/azurestoragejs.blob-10.5.0/azure-storage-blob.js" asp-append-version="true"></script>
<script src="~/js/document.js" charset="utf-8" asp-append-version="true"></script>