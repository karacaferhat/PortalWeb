<div class="filter-section">
    <div class="filter-form">
        <div class="text-inputs-field">
            <div class="filter-heading">Secim Ekrani</div>
            <div class="mat-input-inline-group">
                <div class="col">
                    <div class="row my-3">
                        <div class="col">
                            <div class="mb-1">
                                <input class="form-control" id="package" type="text" placeholder="Paket" disabled>
                            </div>
                        </div>


                        <div class="col">
                            <div>
                                <button id="newPackageButton" class="btn btn-primary">
                                    Yeni Paket Olustur
                                </button>
                            </div>
                        </div>
                    </div>
                    

                    <div class="row my-3">
                        <div class="col">
                            <div class="mb-1">
                                <input class="form-control" id="asn" type="text" placeholder="ASN" disabled>
                            </div>
                            <div class="mat-input dx-field">
                                <div class="dx-field-label">ASN Tarihi</div>
                                <div class="dx-field-value">
                                    <div id="asnDate"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col">
                            <div>
                                <button id="newAsnButton" class="btn btn-primary">
                                    Yeni ASN Olustur
                                </button>
                                <button class="btn btn-primary" data-bs-target="#chooseAsnModal" ,
                                    data-bs-toggle="modal">
                                    ASN Seç
                                </button>
                            </div>
                        </div>
                    </div>


                    <div class="row my-3">
                        <div class="col">
                            <input class="form-control" id="products" type="text" placeholder="Urunler" disabled>
                        </div>
                        <div class="col">
                            <button class="btn btn-primary" data-bs-target="#chooseProductsModal" ,
                                data-bs-toggle="modal">
                                Urun Seç
                            </button>
                        </div>
                    </div>

                    <div class="row my-3">
                        <div class="col">
                            <input type="file" id="fileAttachment" class="form-control" multiple />
                        </div>
                        <div class="col">
                            <button id="fileAttachmentButton" class="btn btn-primary">
                                Dosya Eklerini Sec
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="filter-section">
    <div class="filter-form">
        <div class="text-inputs-field">
            <div class="filter-heading">Urun Ekrani</div>
            <div class="mat-input-inline-group">
                <div class="col">
                    <div class="row">
                        <div class="col mat-input mat-text">
                            <input id="quantity" type="text">
                            <span class="placeholder">Urun Miktari</span>
                            <span class="input-border"></span>
                        </div>
                        <div class="col mat-input mat-text">
                            <input id="lot" type="text">
                            <span class="placeholder">LOT</span>
                            <span class="input-border"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="action-footer">
        <button id="createDeliveryButton" class="btn btn-sm btn-outline-primary rounded-pill ripple-fx">
            <span class="btn-icon fas fa-tasks"></span>
            <span class="btn-title">Olustur</span>
        </button>
    </div>
</div>