<div class="filter-section">
    <div class="filter-form">
        <div class="text-inputs-field">
            <div class="filter-heading">Sevkiyat Oluştur</div>
            <div class="mat-input-inline-group">
                <div class="col">
                    <div class="row my-3">
                        <div class="col">
                            <div class="mb-1">
                                <input class="form-control" id="asn" type="text" placeholder="Sevkiyat" disabled>
                            </div>
                            <div class="mat-input dx-field">
                                <div class="dx-field-label">Sevkiyat Tarihi</div>
                                <div class="dx-field-value">
                                    <div id="asnDate"></div>
                                </div>
                            </div>
                        </div>


                        <div class="col">
                            <div>
                                <button id="newAsnButton" class="btn btn-primary">
                                    Yeni Sevkiyat Olustur
                                </button>
                                <button class="btn btn-primary" data-bs-target="#chooseAsnModal" ,
                                    data-bs-toggle="modal">
                                    Sevkiyat Seç
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col">
                            <input class="form-control" id="deliveryCompany" type="text" placeholder="Tasima Sirketi">
                        </div>
                        <div class="col">
                            <label for="deliveryType">Tasima Turu</label>
                            <select id="deliveryType">
                                <option value="cargo">Kargo</option>
                                <option value="plane">Ucak</option>
                                <option value="other">Diger</option>
                            </select>
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col">
                            <input class="form-control" id="plateNo" type="text" placeholder="Arac Plakasi">
                        </div>
                        <div class="col">
                            <input class="form-control" id="taxNo" type="text" placeholder="Vergi Numarasi">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="filter-section">
    <div class="filter-form">
        <div class="text-inputs-field">
            <div class="filter-heading">Sevkiyata Ürün Ekle</div>
            <div class="mat-input-inline-group">
                <div class="col">
                    <div class="row my-3">
                        <div class="col">
                            <input class="form-control" id="package" type="text" placeholder="Paket" disabled>
                        </div>
                        <div class="col">
                            <button id="newPackageButton" class="btn btn-primary">
                                Yeni Paket Olustur
                            </button>
                        </div>
                    </div>

                    <div class="row my-3">
                        <div class="col">
                            <input class="form-control" id="products" type="text" placeholder="Urunler" disabled>
                        </div>
                        <div class="col">
                            <button class="btn btn-primary" data-bs-target="#chooseProductsModal" ,
                                data-bs-toggle="modal">
                                Urun Seç
                            </button>
                        </div>
                    </div>

                    <div class="row my-3" id="productInfo"></div>


                    <div class="row my-3">
                        <div class="col mat-input mat-text">
                            <input id="quantity" type="text">
                            <span class="placeholder">Urun Miktari</span>
                            <span class="input-border"></span>
                        </div>
                        <div class="col mat-input mat-text">
                            <input id="lot" type="text">
                            <span class="placeholder">LOT</span>
                            <span class="input-border"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="action-footer">
        <button id="createDeliveryButton" class="btn btn-sm btn-outline-primary rounded-pill ripple-fx">
            <span class="btn-icon fas fa-tasks"></span>
            <span class="btn-title">Ürünü Kaydet</span>
        </button>
    </div>

    <div class="table-section">
        <div class="action-section">
            <button id="openPrintDialog" class="btn btn-sm btn-primary rounded-pill ripple-fx no-border">
                <span class="btn-icon fas fa-bookmark"></span>
                <span class="btn-title">Etiket Bas</span>
            </button>
            <button id="deleteDeliveryItemButton" class="btn btn-sm btn-danger rounded-pill ripple-fx no-border">
                <span class="btn-icon fas fa-ban"></span>
                <span class="btn-title">Sil</span>
            </button>
            <button id="refreshGridButton" class="btn btn-sm btn-success rounded-pill ripple-fx no-border" hidden>
                <!--hidden-->
                <span class="btn-icon fas fa-sync"></span>
                <span class="btn-title">Tabloyu Yenile</span>
            </button>
        </div>
        <div id="deliveryGridContainer"></div>
    </div>
</div>


<div class="filter-section">
    <div class="filter-form">
        <div class="text-inputs-field">
            <div class="filter-heading">Sevkiyata Dosya Ekle</div>
            <div class="mat-input-inline-group">
                <div class="row">
                    <div class="col">
                        <div class="row my-3">
                            <div hidden>
                                <!--Simdilik Gorunmesin-->
                                <input type="file" id="fileAttachment" class="form-control" multiple />
                                <input type="file" id="fileEirsaliye" class="form-control" />
                            </div>

                            <div class="col">
                                <div class="row mx-2">
                                    <button id="fileAttachmentButton" class="btn btn-primary">
                                        Dosya Seç
                                    </button>
                                </div>
                                <div class="row mx-2">
                                    <button id="fileAttachmentClearButton" class="btn btn-danger">
                                        Secimi Temizle
                                    </button>
                                </div>
                                <div class="row mx-2">
                                    <div id="fileAttachmentList" class="row"></div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row mx-2">
                                    <button id="fileEirsaliyeButton" accept="application/pdf" class="btn btn-primary">
                                        E-irsaliye Seç
                                    </button>
                                </div>
                                <div class="row mx-2">
                                    <button id="fileEirsaliyeClearButton" accept="application/pdf"
                                        class="btn btn-danger">
                                        Secimi Temizle
                                    </button>
                                </div>
                                <div class="row mx-2">
                                    <div id="fileEirsaliyeList" class="row"></div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row mx-2">
                                    <div class="col">
                                        <div class=" row">
                                            <h5>Yuklenmis Dosyalar</h5>
                                        </div>
                                        <div id="uploadedFilesList" class="row"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="row mx-2">
                                    <div class="col">
                                        <div class="row">
                                            <h5>E-irsaliye</h5>
                                        </div>
                                        <div id="uploadedEirsaliyeList" class="row"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="action-footer">
        <div class="mx-2">
            <button class="btn btn-success" data-bs-target="#exitModal" , data-bs-toggle="modal">
                Cikis Onayi Ver
            </button>
        </div>

        <div class="mx-2">
            <button id="uploadFilesButton" class="btn btn-sm btn-outline-primary rounded-pill ripple-fx">
                <span class="btn-icon fas fa-tasks"></span>
                <span class="btn-title">Dosyalari Kaydet</span>
            </button>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.4/dist/barcodes/JsBarcode.code128.min.js"></script>
<script src="~/js/printThis.js" charset="utf-8" asp-append-version="true"></script>
<link rel="stylesheet" src="~/css/print.css" type="text/css" media="print">
<script src="~/js/printLabel.js" charset="utf-8" asp-append-version="true"></script>

<div class="modal fade" id="printDialog" role="dialog" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Print</h5>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">
                    <span class="fa fa-times"></span>
                </button>
            </div>
            <div class="modal-body">              
                <div id="printArea" class="printArea" >
                  
                    <div class="row"><div class="col labelCol">Sevkiyat No:</div><div class="col labelValue">X0001</div></div>
                    <div class="row"><div class="col labelCol">Sipariş No:</div><div class="col labelValue">X0001</div></div>
                    <div class="row"><div class="col labelCol">Ürün Kodu:</div><div class="col labelValue">X0001</div></div>
                    <div class="row"><div class="col labelCol">Ürün Adı:</div><div class="col labelValue">X0001</div></div>
                    <div class="row"><div class="col labelCol">Miktar:</div><div class="col labelValue">X0001<span>-</span><span>ADET</span></div></div>                    
                    
                    <svg id="barcode"></svg>
               
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button id="printLabelButton" class="btn btn-sm btn-primary rounded-pill ripple-fx no-border">
                    <span class="btn-icon fas fa-bookmark"></span>
                    <span class="btn-title">Print</span>
                </button>
            </div>
        </div>
    </div>
</div>



